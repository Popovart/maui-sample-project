<ResourceDictionary
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
	<Style TargetType="Button" x:Key="PopupButton">
		<Setter
			Property="TextColor"
			Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
		/>
		<Setter
			Property="BackgroundColor"
			Value="{AppThemeBinding Light={StaticResource Crimson}, Dark={StaticResource White}}"
		/>
	</Style>
	<Style TargetType="VerticalStackLayout" x:Key="TaskPopupContent">
		<Setter
			Property="BackgroundColor"
			Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Crimson}}"
		/>
		<Setter Property="Padding" Value="10" />
	</Style>
	<Style TargetType="Entry" x:Key="TaskPopupEntry">
		<Setter
			Property="TextColor"
			Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}"
		/>
	</Style>
	<Style TargetType="Label" x:Key="TaskPopupLabel">
		<Setter
			Property="TextColor"
			Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}"
		/>
	</Style>
</ResourceDictionary>
