<?xml version="1.0" encoding="utf-8"?>
<toolkit:Popup
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
	xmlns:controls="clr-namespace:MauiApp1.Controls"
	xmlns:viewModels="clr-namespace:MauiApp1.ViewModels"
	x:DataType="viewModels:TaskPopupViewModel"
	x:Class="MauiApp1.Popups.ComplexTaskPopup"
>
	<VerticalStackLayout
		Style="{StaticResource TaskPopupContent}"
		WidthRequest="290"
		HorizontalOptions="Fill"
	>
		<Label
			HorizontalOptions="Fill"
			Text="Edit task"
			FontAttributes="Bold"
			FontSize="18"
			Style="{StaticResource TaskPopupLabel}"
		/>
		<Grid
			HorizontalOptions="Fill"
			ColumnDefinitions="Auto,*"
			RowDefinitions="Auto,Auto,Auto"
			ColumnSpacing="8"
			RowSpacing="8"
			Padding="0, 0, 0, 15"
		>
			<Label
				Grid.Row="0"
				Grid.Column="0"
				Text="Name"
				VerticalTextAlignment="Center"
				Style="{StaticResource TaskPopupLabel}"
			/>
			<controls:CustomEntry
				Grid.Row="0"
				Grid.Column="1"
				Text="{Binding NameInput}"
				Placeholder="Enter name"
				Style="{StaticResource TaskPopupEntry}"
			/>
			<Label
				Grid.Row="1"
				Grid.Column="0"
				Text="Description"
				VerticalTextAlignment="Center"
				Style="{StaticResource TaskPopupLabel}"
			/>
			<controls:CustomEntry
				Grid.Row="1"
				Grid.Column="1"
				Text="{Binding DescriptionInput}"
				Style="{StaticResource TaskPopupEntry}"
			/>
			<Label
				Grid.Row="2"
				Grid.Column="0"
				Text="Due date"
				VerticalTextAlignment="Center"
				Style="{StaticResource TaskPopupLabel}"
			/>
			<!-- <Entry TextColor="Black" Grid.Row="2" Grid.Column="1" -->
			<!--        Text="{Binding DueDateInput}" -->
			<!--        Placeholder="YYYY-MM-DD HH:mm" /> -->
			<controls:CustomEntry
				Grid.Row="2"
				Grid.Column="1"
				Text="{Binding DueDateInput}"
				Placeholder="YYYY-MM-DD HH:mm"
				Style="{StaticResource TaskPopupEntry}"
			/>
		</Grid>
		<HorizontalStackLayout Spacing="12" HorizontalOptions="End">
			<Button
				Style="{StaticResource PopupButton}"
				Text="Cancel"
				Command="{Binding CancelCommand}"
			/>
			<Button
				Style="{StaticResource PopupButton}"
				Text="Save"
				Command="{Binding SaveCommand}"
			/>
		</HorizontalStackLayout>
	</VerticalStackLayout>
</toolkit:Popup>
